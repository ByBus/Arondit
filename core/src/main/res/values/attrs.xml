<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EruditWordView">
        <attr name="mainColor" format="color"/>
        <attr name="asteriskColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="size" format="dimension"/>
        <attr name="word" format="string"/>
        <attr name="clickableLetters" format="boolean"/>
        <attr name="useDiffUtil" format="boolean"/>
        <attr name="animateUpdates" format="boolean"/>
        <attr name="initWithBadges" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="HeaderTextView">
        <attr name="leftDrawable" format="reference"/>
        <attr name="leftDrawableTintBackgroundMask" format="reference"/>
        <attr name="centerDrawable" format="reference"/>
        <attr name="rightDrawable" format="reference"/>
        <attr name="rightDrawableTintBackgroundMask" format="reference"/>
    </declare-styleable>
    <declare-styleable name="ResponsiveTextDrawView">
        <attr name="textToDraw" format="string"/>
        <attr name="minTextSize" format="dimension"/>
        <attr name="normalTextSize" format="dimension"/>
        <attr name="textBaseColor" format="color" />
        <attr name="font" format="reference" />
    </declare-styleable>
    <declare-styleable name="LetterBlockView">
        <attr name="letter" format="string" />
        <attr name="points" format="integer" />
        <attr name="letterColor" format="color" />
        <attr name="blockSize" format="dimension" />
        <attr name="blockBackground" format="reference" />
    </declare-styleable>
    <declare-styleable name="FlagView">
        <attr name="horizontalRod" format="reference" />
        <attr name="horizontalRodDiameter" format="dimension" />
        <attr name="stripePadding" format="dimension" />
        <attr name="stripeWidth" format="dimension" />
        <attr name="flagColor" format="color" />
        <attr name="stripeColor" format="color" />
        <attr name="centerColor" format="color" />
        <attr name="sleevesCount" format="integer" />
        <attr name="topToBottomRatio" format="float" />
        <attr name="shadowColor" format="color" />
        <attr name="flagMaxWidth" format="dimension" />
    </declare-styleable>
</resources>