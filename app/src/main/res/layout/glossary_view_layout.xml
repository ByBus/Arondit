<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/wordTerm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="СЛОВО"
        android:drawablePadding="2dp" />

    <TextView
        android:id="@+id/wordGlossary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wordTerm"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/base_green"
        tools:text="Толковый словарь русского языка" />

    <TextView
        android:id="@+id/wordDefinition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wordGlossary"
        tools:text="слово, сл′ово, -а, мн. ч. слова, слов, словам, ср.1. Единица языка, служащая для наименования понятий, предметов, лиц, действий, состояний, признаков, связей, от" />
</RelativeLayout>