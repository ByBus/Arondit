<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="DialogHeader">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:fontFamily">@font/yanone_kaffeesatz_bold</item>
    </style>

    <style name="text_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">false</item>
        <item name="chipMinTouchTargetSize">32dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.ExtraSmall</item>
    </style>

    <style name="DialogStyle" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysVisible</item>
    </style>

    <style name="bonus_toggle_style_x3">
        <item name="android:textOff">@string/x3</item>
        <item name="android:textOn">@string/x3</item>
        <item name="android:textColor">@color/text_color_toggle</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bonus_toggle_style_x2" parent="bonus_toggle_style_x3">
        <item name="android:textOff">@string/x2</item>
        <item name="android:textOn">@string/x2</item>
    </style>

    <style name="bonus_toggle_style_plus15" parent="bonus_toggle_style_x3">
        <item name="android:textOff">@string/plus15</item>
        <item name="android:textOn">@string/plus15</item>
    </style>

    <style name="BottomSheetDialogInnerContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:background">@drawable/rounded_rectangle_bottom_sheet_bg</item>
        <item name="android:paddingTop">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="BottomSheetDialogInnerContainerSmall" parent="BottomSheetDialogInnerContainer">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>


    <style name="BottomSheetDialogCompositeHeader" parent="DialogHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="InfoBlockImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="PlayerFieldName">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayerFieldScore">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large.Inverse</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <string name="plus15">+15</string>
</resources>