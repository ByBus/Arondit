<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/gamesListFragment">

    <fragment
        android:id="@+id/gamesListFragment"
        android:name="host.capitalquiz.arondit.gameslist.ui.GamesListFragment"
        android:label="fragment_games_list"
        tools:layout="@layout/fragment_games_list">
        <action
            android:id="@+id/action_to_removeGameDialog"
            app:destination="@id/removeGameDialog" />
        <action
            android:id="@+id/action_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment" />
        <action
            android:id="@+id/action_to_game_fragment"
            app:destination="@id/game_nav_graph">
            <argument
                android:name="gameId"
                app:argType="long" />
        </action>
    </fragment>
    <dialog
        android:id="@+id/removeGameDialog"
        android:name="host.capitalquiz.arondit.gameslist.ui.RemoveGameDialog"
        android:label="RemoveGameDialog">
        <argument
            android:name="gameId"
            app:argType="long" />
    </dialog>
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="host.capitalquiz.arondit.onboarding.ui.OnBoardingFragment"
        android:label="fragment_on_boarding"
        tools:layout="@layout/fragment_on_boarding">
        <argument
            android:name="gameId"
            app:argType="long" />
        <action
            android:id="@+id/action_to_gameFragment"
            app:destination="@id/game_nav_graph"
            app:popUpTo="@id/gamesListFragment">
            <argument
                android:name="gameId"
                app:argType="long" />
        </action>
    </fragment>
    <include app:graph="@navigation/game_nav_graph" />
</navigation>