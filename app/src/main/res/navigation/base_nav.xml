<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/gamesListFragment">

    <fragment
        android:id="@+id/gameFragment"
        android:name="host.capitalquiz.arondit.game.ui.GameFragment"
        android:label="GameFragment" >
        <action
            android:id="@+id/actionAddWordDialog"
            app:destination="@id/addWordDialog"
            app:launchSingleTop="false" />
        <action
            android:id="@+id/action_to_addPlayerDialog"
            app:destination="@id/addPlayerDialog" />
        <action
            android:id="@+id/action_gameFragment_to_addWordDialog"
            app:destination="@id/addWordDialog" />
        <action
            android:id="@+id/action_to_editWordDialog"
            app:destination="@id/editWordDialog" />
        <argument
            android:name="gameId"
            app:argType="long" />
        <action
            android:id="@+id/action_to_removePlayerDialog"
            app:destination="@id/removePlayerDialog" />
    </fragment>
    <dialog
        android:id="@+id/addWordDialog"
        android:name="host.capitalquiz.arondit.game.ui.dialog.AddWordDialog"
        android:label="AddWordDialog" >
        <argument
            android:name="playerId"
            app:argType="long" />
        <argument
            android:name="dialogColor"
            app:argType="integer" />
    </dialog>
    <fragment
        android:id="@+id/gamesListFragment"
        android:name="host.capitalquiz.arondit.gameslist.ui.GamesListFragment"
        android:label="fragment_games_list"
        tools:layout="@layout/fragment_games_list" >
        <action
            android:id="@+id/action_to_gameFragment"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_to_removeGameDialog"
            app:destination="@id/removeGameDialog" />
    </fragment>
    <dialog
        android:id="@+id/addPlayerDialog"
        android:name="host.capitalquiz.arondit.game.ui.dialog.AddPlayerDialog"
        android:label="AddPlayerDialog" >
        <argument
            android:name="color"
            app:argType="integer" />
    </dialog>
    <dialog
        android:id="@+id/editWordDialog"
        android:name="host.capitalquiz.arondit.game.ui.dialog.EditWordDialog"
        android:label="EditWordDialog" >
        <argument
            android:name="wordId"
            app:argType="long" />
        <argument
            android:name="dialogColor"
            app:argType="integer" />
        <argument
            android:name="playerId"
            app:argType="long" />
    </dialog>
    <dialog
        android:id="@+id/removeGameDialog"
        android:name="host.capitalquiz.arondit.gameslist.ui.RemoveGameDialog"
        android:label="RemoveGameDialog" >
        <argument
            android:name="gameId"
            app:argType="long" />
    </dialog>
    <dialog
        android:id="@+id/removePlayerDialog"
        android:name="host.capitalquiz.arondit.game.ui.dialog.RemovePlayerDialog"
        android:label="RemovePlayerDialog" >
        <argument
            android:name="playerId"
            app:argType="long" />
        <argument
            android:name="playerColor"
            app:argType="integer" />
    </dialog>
</navigation>